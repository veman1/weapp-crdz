
.u-cat-item {
  position: relative;
  display: block;
  width: 150rpx;
  height: 150rpx;
  box-sizing: border-box;
  border: 2px solid transparent;
  border-radius: 5px;
  margin-bottom: 20rpx;
}
.u-cat-item--current {
  border-color: #FF0000;
}
.u-cat-item--current:after {
  content: '';
  display: block;
  position: absolute;
  left: 15rpx;
  top: 100%;
  width: 0;
  height: 0;
  border-top: 15rpx solid #FF0000;
  border-left: 15rpx solid transparent;
  border-right: 15rpx solid transparent;
} 
.u-cat-item>image {
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 3px;
}