
page {
    background-color: #f6f6f6;
    padding: 0 0 100rpx;
}

/* # 主要部分 */
#main {
    background-color: #fff;
    overflow: hidden;
}
#main .goods {
    width: 600rpx;
    margin: 50rpx auto 0;
    overflow: hidden;
    border-radius: 10px;
    border: 1px solid #eee;
}
#main .goods swiper {
    width: 400rpx;
    height: 400rpx;
    margin: 50rpx auto 0;
}
#main .goods swiper .swiper-img {
    width: 100%;
    height: 100%;
}
#main .goods .name {
    font-size: 32rpx;
    padding: 20rpx;
    text-align: center;
}
#main .goods .price-box {
    display: flex;
    justify-content: center;
    align-content: center;
}
#main .goods .price-box .price {
    font-size: 36rpx;
    color: #E84F50;
    font-weight: bold;
}
#main .goods .price-box .shipping_free {
    background-color: #FFD136;
    /* font-size: 30rpx; */
    color: #5B3100;
    padding: 5rpx;  
    border-radius: 3px;
    margin: 0 0 0 15rpx;
}
#main .goods .remain_time {
    font-size: 32rpx;
    height: 3em;
    color: #fff;
    background-color: #FE4A49;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 15rpx 0 0;
}
#main .goods .remain_time.over {
  color: yellow;
}
#main .msg {
    font-size: 30rpx;
    padding: 20rpx;
    text-align: center;
}
#main .members {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    padding: 20rpx 0;
}
#main .members .member {
    box-sizing: border-box;
    position: relative;
    width: 120rpx;
    height: 120rpx;
    margin: 0 20rpx 30rpx 0;
}
#main .members .member image {
    display: block;
    border: 1px solid #eee;
    overflow: hidden;
    border-radius: 50%;
    width: 100%;
    height: 100%;
}
#main .members .member .isLeader {
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    bottom: -0.75em;
    left: 50%;
    margin-left: -1.5em;
    width: 3em;
    height: 1.5em;
    border-radius: 0.75em;
    color: #fff;
    background-color: #FE4A49;
}
#main .members .none {
    box-sizing: border-box;
    background-color: #F6F6F6;
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    border: 1px dashed #D65957;
    margin: 0 20rpx 20rpx 0;
}

/* #地址信息 */
#addrbox {
  margin: 20rpx 0 0;
}
#addrbox .item {
  border-bottom: 1px solid #eee;
  background-color: #fff;
  padding: 1em 0;
  display: flex;
  justify-content: space-between;
}
#addrbox .item .hd {
  padding: 0 1em;
  min-width: 15%;
  max-width: 15%;
}
#addrbox .item .bd {
  word-break: break-all;
  max-width: 85%;
  color: #999;
  padding: 0 1em;  
}

/* #底部按钮 */
.fixbottom {
    display: flex;
    position: fixed;
    bottom: 0;
    z-index: 2;
    height: 100rpx;
    width: 750rpx;
}
.fixbottom .share {
  opacity: 0;
  position: absolute;
  width: 100%;
  height: 100%;
}
.fixbottom .btn {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
    font-size: 30rpx;
    color: #fff;
    background-color: #FE4A49;
}
.fixbottom .btn.over {
  color: yellow;
}