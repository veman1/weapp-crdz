
.g-catbar {
  background-color: #fff;
  padding-top: 20rpx;
}
.g-goods-list {
  display: flex;
  flex-wrap: wrap;
  padding-left: 25rpx;
  margin: 20rpx 0 0;
}
.g-goods-item {
  margin: 0 25rpx 25rpx 0;
}
.g-goods-note {
  color: #666;
  font-size: 26rpx;
  text-align: center;
  margin: 30rpx 0 0;
}


/* 标签栏 */
.tabs-box {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: #fff;
  width: 100%;
  height: 90rpx;
}
.tab {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  text-align: center;
  color: #999;
}
.tab-active {
  color: #000;
}
.tab>view {
  width: 30rpx;
}
.tab image {
  width: 16rpx;
  height: 16rpx;
  margin-left: 10rpx;
}
.arrow {
  position: relative;
  bottom: 5rpx;
  display: inline-block;
  width: 10rpx;
  height: 10rpx;
  border-top: 1px solid #666;
  border-left: 1px solid #666;
  transform: rotate(-135deg);
  margin-left: 10rpx;
}
.arrow.up {
  transform: rotate(45deg);
  border-color: #F7D24C;
}
