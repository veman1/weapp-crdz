page {
    background: #fff;
    padding: 71rpx 0 0;
}

/* # 标签栏 */

.class-tab {
    position: fixed;
    z-index: 2;
    top: 0;
    color: #999;
    display: flex;
    flex-direction: row;
    justify-content: center;
    background: #fff;
    width: 750rpx;
    height: 70rpx;
    border-bottom: 1rpx solid #eee;
}

.class-tab .tab {
    width: 25%;
    font-size: 26rpx;
    line-height: 66rpx;
    height: 66rpx;
    border-bottom: 4rpx solid transparent;
    text-align: center;
}

.class-tab .tab.select {
    color: #de3d96;
    border-color: #de3d96;
}

.order-item {
    position: relative;
    background: #fff;
    border-bottom: 20rpx solid #f5f5f5;
}

.orderStatus {
    position: absolute;
    top: 10px;
    right: 20rpx;
    font-size: 24rpx;
}

.order-item:last-child {
    margin-bottom: 0;
}

.carts-item {
    display: flex;
    flex-direction: row;
    height: 150rpx;
    width: 720rpx;
    padding: 10rpx 0 10rpx 30rpx;
    background: #fafafa;
}

.carts-image {
    width: 150rpx;
    height: 150rpx;
    border-radius: 10rpx;
}

.carts-text {
    margin-left: 10rpx;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.order-footer {
    padding: 20rpx;
}

.order-footer .sum {
    text-align: right;
}

.order-footer .sum .hl {
    color: #f60;
}

.order-footer .btns {
    display: flex;
    justify-content: flex-end;
}

.order-footer .btns .btn {
    margin-top: 20rpx;
}

.btn-pay {
    margin-bottom: 5rpx;
    height: 50rpx;
    padding-left: 30rpx;
    padding-right: 30rpx;
    font-size: 27rpx;
    line-height: 50rpx;
    align-self: flex-end;
    border: 1px solid #000;
    border-radius: 2px;
    margin-left: 20rpx;
}

.btn-pay-pink {
    color: #de3d96;
    border: 1px solid #de3d96;
}

.btn-cancel {
    margin-bottom: 5rpx;
    height: 50rpx;
    padding-left: 30rpx;
    padding-right: 30rpx;
    font-size: 27rpx;
    line-height: 50rpx;
    color: gray;
    border-color: gray;
    border-width: 1rpx;
    border-style: solid;
    background: #fff;
    align-self: flex-end;
    border-radius: 6rpx;
}

/*右上部分标题*/

.carts-title {
    font-size: 28rpx;
    color: #444;
    /* white-space: nowrap; */
    line-height: 38rpx;
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

/*右下部分价格与数量*/

.carts-subtitle {
    margin-top: 15rpx;
    font-size: 24rpx;
    color: darkgray;
}

/*价格*/

.carts-price {
    color: #de3d96;
    font-size: 27rpx;
    line-height: 22px;
}

.carts-num {
    color: #383838;
    font-size: 28rpx;
    line-height: 22px;
}

.carts-right {
    width: 140rpx;
    display: flex;
    height: 105rpx;
    justify-content: space-between;
    flex-direction: column;
    align-items: flex-end;
    margin-right: 20rpx;
    margin-top: -10rpx;
}

/* 订单号 */

.view-title {
    height: 68rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.view-title image {
    margin-left: 20rpx;
    width: 40rpx;
    height: 40rpx;
}

.view-title text {
    font-size: 26rpx;
    color: #383838;
    margin-left: 15rpx;
}

/* # 没有订单提示 */

.view-tint {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-top: 200rpx;
}

.view-tint image {
    width: 250rpx;
    height: 312rpx;
}

.view-tint text {
    color: #888;
    font-size: 33rpx;
    margin-top: 30rpx;
}
