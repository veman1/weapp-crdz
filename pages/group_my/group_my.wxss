page {
  padding: 90rpx 0 0;
  background-color: #fbfbfb;
}

/* # 标签栏 */

.tabs {
  white-space: nowrap;
  background-color: #fff;
  position: fixed;
  z-index: 2;
  top: 0;
  box-sizing: border-box;
  width: 750rpx;
  height: 90rpx;
  border-bottom: 1px solid #eee;
}

.tabs .tab {
  box-sizing: border-box;
  color: #333;
  width: 25%;
  height: 100%;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  border-bottom: 2px solid transparent;
}

.tabs .tab.current {
  color: #ff5d5b;
  border-color: #ff5d5b;
}

/* 列表 */

.list {
  overflow: hidden;
  margin: 20rpx 0 0;
}

.list .item {
  background-color: #fff;
  margin: 0 0 20rpx;
  overflow: hidden;
}

.list .item .hd {
  margin: 20rpx 0 0;
  border-left: 3px solid #ff5d5b;
  padding: 0 0 0 25rpx;
  color: #ff5d5b;
}

.list .item .goods {
  position: relative;
  background-color: #fbfbfb;
  height: 190rpx;
  box-sizing: border-box;
  padding: 15rpx 120rpx 15rpx 200rpx;
  margin: 20rpx 0 0;
}

.list .item .goods .img {
  box-sizing: border-box;
  border: 3px solid #fff;
  position: absolute;
  top: 15rpx;
  left: 20rpx;
  width: 160rpx;
  height: 160rpx;
}

.list .item .goods .title {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  width: 95%
}

.list .item .goods .subtitle {
  color: #999;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin: 10rpx 0 0;
}

.list .item .goods .price {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}

.list .item .goods .num {
  color: #999;
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
}

.list .item .sum {
  padding: 20rpx;
  text-align: right;
}

.list .item .btns {
  padding: 20rpx 20rpx 0;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-end;
  border-top: 1px solid #eee;
}

.list .item .btns .btn {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 24rpx;
  background-color: #ff4948;
  border-radius: 4px;
  padding: 0 1em;
  height: 2em;
  margin: 0 0 20rpx 10rpx;
}

/* # 没有结果提示 */

.view-empty {
  text-align:center;
  margin: 20rpx 0;
}

.view-empty text {
  display: block;
  text-align: center;
  font-size: 26rpx;
  color: #aaa;
  height: 80rpx;
  line-height: 80rpx;
}
