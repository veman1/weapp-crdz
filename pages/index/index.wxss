
.g-nav,.g-group,.g-recommend {margin-top: 10rpx;background-color:#fff;overflow: hidden;}

.g-nav {
  margin-top:0;
}
.g-nav-swiper {
  height: 309rpx;
  margin-top: 10rpx;
  padding: 0 10rpx;
}
.g-nav-catbar {
  margin-top: 20rpx;
}
.g-group {
  padding-bottom: 20rpx; 
}
.g-goods-list {
  display: flex;
  flex-wrap: wrap;
  padding: 0 0 0 25rpx;
  margin: 20rpx 0 0;
}
.g-goods-item {
  margin: 0 25rpx 25rpx 0;
}

.m-swiper {
  width: 100%;
  height: 100%;
  border-radius: 5px;
  overflow: hidden;
}
.m-swiper__image {
  display: block;
  width: 100%;
  height: 100%;
}

.m-titlebar{position:relative;margin: 20rpx 0 0;text-align: center;}
.m-titlebar__title{display: flex;justify-content: center;align-items: center;font-size: 1.2em;}
.m-titlebar__title:before,.m-titlebar__title:after{content: '';width: 1.5em;height: 1px;background-color: #1B1B1B;margin: 0 .2em;}
.m-titlebar__subtitle{color: #999;font-size: .9em;}
.m-titlebar__ft{position: absolute;right: 10rpx;top: 5rpx;font-size: .9em;}

.m-content-banner {
  position: relative;
  margin: 20rpx auto 0;
  width: 730rpx;
  height: 264.7rpx;
}
.m-content-banner:after {
  content: '';
  display: block;
  position: absolute;
  left: 20rpx;
  bottom: 0;
  width: 0;
  height: 0;
  border-bottom: 25rpx solid #fff;
  border-left: 15rpx solid transparent;
  border-right: 15rpx solid transparent;
}
.m-content-banner__img {
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 5px;
  margin: auto;
}

